<h2><%= @page_title %></h2>
<% if @r32s && !@r32s.blank? -%>
  <% @r32s.each do |r32| -%>
    <h3 class="blog_link"><%= link_to "#{r32_to_s(r32, :show_owner => false)}", :action => 'show', :id => r32.id %>
      <%= render :partial => 'post_stats', :locals => { :r32 => r32 } %>
    </h3>
  <% end -%>
<% else -%>
  <h3>You have no R32s.</h3>
<% end -%>